<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Crear Nueva Factura</title>
    <link rel="stylesheet" href="/styles.css">
    <script>
        function agregarArticulo() {
            const container = document.getElementById('articulos');
            const index = container.children.length;

            const nuevoArticulo = `
                <div style="margin-bottom:10px;">
                    <input type="text" name="articulos[${index}][nombre]" placeholder="Nombre del artículo" required>
                    <input type="number" name="articulos[${index}][cantidad]" placeholder="Cantidad" required>
                    <input type="number" step="0.01" name="articulos[${index}][precio]" placeholder="Precio" required>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', nuevoArticulo);
        }
    </script>
</head>
<body>

<h1>Crear Nueva Factura</h1>

<form action="/facturas" method="POST">
    <label>Número de Factura:</label><br>
    <input type="text" name="numero_factura" required><br><br>

    <label>Nombre del Cliente:</label><br>
    <input type="text" name="cliente" required><br><br>

    <div id="articulos">
        <!-- Aquí se agregarán los artículos -->
    </div>

    <label>Total General</label><br>
    <input type="number" step="0.01" name="total_general" required><br><br>



    <button type="button" onclick="agregarArticulo()">Agregar Artículo</button><br><br>

    <label>Notas:</label><br>
    <textarea name="notas"></textarea><br><br>

    <button type="submit">Guardar Factura</button>
</form>

</body>
</html>
